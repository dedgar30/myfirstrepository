<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    
    <TextView
        android:id="@+id/firstScreenTitleTXT"
        style="@style/titleView"
        android:text="Your Basic Details"/>
    
    <TextView
        android:id="@+id/monthlySalaryTXT"
        style="@style/textview"
        android:layout_below="@id/firstScreenTitleTXT"
        android:text="Monthly salary: "/>
    
    <EditText
        android:id="@+id/monthlySalaryEDT"
        style="@style/spinner.edittext"
        android:layout_below="@id/firstScreenTitleTXT"
        android:layout_toEndOf="@id/monthlySalaryTXT"
        android:layout_alignBaseline="@id/monthlySalaryTXT"
        android:hint="*Required field"/>
    
    <TextView
        android:id="@+id/civilStatusTXT"
        style="@style/textview"
        android:layout_below="@id/monthlySalaryEDT"
        android:text="Civil status: "/>
    
    <Spinner
        android:id="@+id/civilStatusSPN"
        style="@style/spinner"
        android:layout_below="@id/monthlySalaryEDT"
        android:layout_toEndOf="@id/civilStatusTXT"
        android:layout_alignBaseline="@id/civilStatusTXT"/>
    
    <Button
        android:id="@+id/next1BTN"
        style="@style/button"
        android:layout_below="@id/civilStatusSPN"
        android:layout_alignParentRight="true"
        android:text="Next"
        android:onClick="setOTScreen"/>
    
</RelativeLayout>

